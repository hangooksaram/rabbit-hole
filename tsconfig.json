{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist/js",
    "noEmit": false,
    "noEmitOnError": true,
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
